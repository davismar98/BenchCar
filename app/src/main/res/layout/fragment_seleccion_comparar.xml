<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="davismar98.app.com.benchcar.FragmentSeleccionComparar">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutCarro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners"
            android:paddingBottom="25dp"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/spinnerMarca1"
                android:gravity="center_horizontal"
                android:text="Selecciona una marca " />

            <Spinner
                android:id="@+id/spinnerMarca1"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginRight="30dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/spinner_style" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/spinnerMarca1"
                android:layout_below="@+id/spinnerMarca1"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:text="Selecciona un modelo" />

            <Spinner
                android:id="@+id/spinnerModelo1"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginRight="15dp"
                android:background="@drawable/spinner_style" />

            <ImageView
                android:id="@+id/img_carro1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/corners"
                app:srcCompat="@drawable/range"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginStart="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comparar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/corners"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                app:srcCompat="@drawable/down_arrow" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                app:srcCompat="@drawable/up_arrow" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="Comparar " />

            <TextView
                android:id="@+id/txtSeleccionMarca1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView10"
                android:layout_toStartOf="@+id/textView10"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="VS"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/txtSeleccionMarca2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView10"
                android:layout_toEndOf="@+id/textView10"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtSeleccionModelo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtSeleccionMarca1"
                android:layout_below="@+id/txtSeleccionMarca1"
                android:layout_marginBottom="15dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSeleccionModelo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtSeleccionMarca2"
                android:layout_below="@+id/txtSeleccionMarca2"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LayoutCarro2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/LayoutCarro1"
            android:background="@drawable/corners">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="25dp"
                android:paddingTop="25dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/spinnerMarca2"
                    android:gravity="center_horizontal"
                    android:text="Selecciona una marca " />

                <Spinner
                    android:id="@+id/spinnerMarca2"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/spinner_style" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/spinnerMarca2"
                    android:layout_below="@+id/spinnerMarca2"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal"
                    android:text="Selecciona un modelo" />

                <Spinner
                    android:id="@+id/spinnerModelo2"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/textView6"
                    android:background="@drawable/spinner_style" />

                <ImageView
                    android:id="@+id/img_carro2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_toStartOf="@+id/spinnerMarca2"
                    android:background="@drawable/corners"
                    app:srcCompat="@drawable/range" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
