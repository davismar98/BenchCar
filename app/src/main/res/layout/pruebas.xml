<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context="davismar98.app.com.benchcar.FragmentVerTodos">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerDialogFragment"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@+id/relativeLayout"
            android:scrollbars="vertical" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/addComentario"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Comentarios sobre este vehÃ­culo"
                android:textColor="@color/icons" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addComentario"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:background="@color/primary_light">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/etComent"
                android:layout_below="@+id/textView2"
                android:numStars="10" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Comentario:" />

            <EditText
                android:id="@+id/etComent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:inputType="textMultiLine" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
