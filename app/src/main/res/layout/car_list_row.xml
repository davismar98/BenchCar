<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/img_carro"
        android:layout_width="85sp"
        android:layout_height="85sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:src="@android:drawable/btn_star_big_on"
        ads:border="true"
        ads:border_color="#EEEEEE"
        ads:border_width="2dp"
        ads:shadow="true" />

    <TextView
        android:id="@+id/txt_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_carro"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/img_carro"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/txt_usuario"
        android:layout_alignStart="@+id/txt_usuario" />

    <ImageView
        android:id="@+id/img_pais"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_alignStart="@+id/txt_comentario"
        android:layout_below="@+id/txt_comentario"
        android:layout_marginTop="5sp"
        ads:srcCompat="@android:drawable/sym_def_app_icon" />

    <ImageView
        android:id="@+id/img_marca"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_below="@+id/txt_comentario"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/img_pais"
        ads:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/rb_calificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:text="100"
        android:textSize="40sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txt_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_marca"
        android:layout_alignTop="@+id/img_marca"
        android:layout_toEndOf="@+id/img_marca"
        android:gravity="center_vertical"
        android:paddingLeft="10sp"
        android:text="TextView"
        android:textStyle="italic" />

</RelativeLayout>
